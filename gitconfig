[diff]
  algorithm = patience
  noprefix = true
[protocol]
  version = 2
[user]
  name = Chris Butcher
  email = cbutcher@gmail.com
[core]
  editor = vim
  commitGraph = true
  excludesfile = ~/.gitignore
[push]
  default = current
[rebase]
  autoStash = true
[rerere]
  enabled = true
[gc]
  writeCommitGraph = true
[alias]
	co = checkout
	br = branch
	ci = commit
	s = status
	d = diff
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /

	# From https://haacked.com/archive/2014/07/28/github-flow-aliases/
	wip = !git add -u && git commit -m "WIP"
	wipcont = reset HEAD~1 --mixed

	# From https://www.durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

	# From swalkinshaw
  fixup = !git commit --fixup=HEAD && git rebase --interactive --autosquash origin/master && :
[pull]
  rebase = false
